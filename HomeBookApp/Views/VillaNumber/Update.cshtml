@model VillaNumberVM

<div class="card border-0 p-4">
    <div class="card-header bg-success bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white pt-3 pb-2">Update Villa Number</h1>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="VillaNumber.Villa_Number" hidden />
            <div>
                <div class="form-floating mb-3 col-12">
                    <select asp-for="VillaNumber.VillaId" asp-items="@Model.VillaList" class="form-select border shadow">
                        <option disabled selected> -- Select Villa -- </option>
                    </select>
                    <label asp-for="VillaNumber.VillaId" for="floatingInput"></label>
                    <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="VillaNumber.Villa_Number" disabled class="form-control" id="floatingInput" placeholder="">
                    <label asp-for="VillaNumber.Villa_Number" for="floatingInput"></label>
                    <span asp-validation-for="VillaNumber.Villa_Number" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="VillaNumber.SpecialDetails" class="form-control" id="floatingInput" placeholder="">
                    <label asp-for="VillaNumber.SpecialDetails" for="floatingInput"></label>
                    <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-success w-100">
                            <i class="bi bi-check-circle"></i> Update   
                        </button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>