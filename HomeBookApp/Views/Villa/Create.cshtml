@model Villa

<div class="card border-0 p-4">
    <div class="card-header bg-success bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white pt-3 pb-2">Create Villa</h1>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form class="row" method="post" enctype="multipart/form-data">
            <div>
                <div class="form-floating mb-3 col-12">
                    <input asp-for="Name" class="form-control" placeholder="">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="Description" class="form-control" placeholder="">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="Price" class="form-control" placeholder="">
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="Sqft" class="form-control" placeholder="">
                    <label asp-for="Sqft"></label>
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="Occupancy" class="form-control" placeholder="">
                    <label asp-for="Occupancy"></label>
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-12">
                    <input asp-for="ImageUrl" hidden class="form-control">
                    <input asp-for="Image" class="form-control">
                    <label asp-for="ImageUrl"></label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>